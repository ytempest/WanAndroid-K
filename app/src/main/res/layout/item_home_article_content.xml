<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_item_home_article_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_author" />

            <TextView
                android:id="@+id/tv_item_home_article_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/common_black_text"
                android:textSize="15sp"
                tools:text="User" />

            <TextView
                android:id="@+id/tv_item_home_article_classify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:maxLines="1"
                android:textColor="@color/main_color"
                android:textSize="14sp"
                tools:text="description" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_home_article_content"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lineSpacingExtra="7dp"
            android:maxLines="2"
            android:minLines="2"
            android:textColor="@color/common_black_text"
            tools:text="content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_item_home_article_collect"
                android:layout_width="26dp"
                android:padding="2dp"
                android:layout_height="26dp"
                android:src="@drawable/sl_collect_status" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_time" />

            <TextView
                android:id="@+id/tv_item_home_article_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:textColor="@color/common_gray_text"
                android:textSize="14sp"
                tools:text="2020-11-11 22:22" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
