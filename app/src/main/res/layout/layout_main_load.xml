<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_main_load_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <com.ytempest.wanandroid.widget.jumping.JumpingView
        android:id="@+id/view_main_load_jumping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="@string/desperately_loading"
        android:textColor="@color/common_light_gray_text"
        android:textSize="14sp" />

</LinearLayout>