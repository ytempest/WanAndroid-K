<resources>
    <declare-styleable name="ModifiableButton">
        <attr name="disable_text_color" format="color" />
        <attr name="normal_text_color" format="color" />
        <attr name="disable_bg" format="color|reference" />
        <attr name="normal_bg" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="MaskLayout">
        <attr name="mask_layout" format="reference" />
    </declare-styleable>

    <declare-styleable name="FlowLayout">
        <!--copy from android:gravity-->
        <attr name="row_gravity" format="flags">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="center" value="0x11" />
        </attr>
    </declare-styleable>

    <declare-styleable name="JumpingView">
        <attr name="jump_height" format="dimension" />
        <attr name="jump_duration" format="integer" />
        <attr name="shape_size" format="dimension" />
    </declare-styleable>
</resources>